{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "plugin:react/recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        { "extensions": [".js", ".jsx", ".ts", ".tsx"] }
      ],
      "react/react-in-jsx-scope": "off",
      "react/prop-types": 0,
      "react/jsx-props-no-spreading": 0,
      "no-useless-escape": 0,
      "no-underscore-dangle": [
        "error",
        { "allowAfterThis": true, "allow": ["_id"] }
      ],
      "class-methods-use-this": ["error", { "exceptMethods": ["_handleResponse"] }]
    }
}
